<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:CrashAlarm.Resources;assembly=CrashAlarm"
             x:Class="CrashAlarm.Views.MainPage"
             Title="{x:Static resources:AppResource.MainPageTitle}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="{x:Static resources:AppResource.WelcomeMessageOnMainPage}" />
        <Label Text="{x:Static resources:AppResource.WelcomeMessageSecondLineOnMainPage}" FontSize="Small"/>
    </StackLayout>

</ContentPage>